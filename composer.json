{
    "name": "jdecool/twig-constant-accessor-bundle",
    "description": "Simplify access of your class constants in Twig",
    "type": "symfony-bundle",
    "keywords": ["symfony", "twig", "constant"],
    "homepage": "http://github.com/jdecool/TwigConstantAccessorBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Jérémy DECOOL",
            "email": "contact@jdecool.fr"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/dependency-injection": "^5.4|^6.0|^7.0",
        "symfony/framework-bundle": "^5.4|^6.0|^7.0",
        "symfony/twig-bundle": "^5.4|^6.0|^7.0",
        "twig/twig": "^2.4|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "matthiasnoback/symfony-dependency-injection-test": "^5.0",
        "friendsofphp/php-cs-fixer": "^3.34",
        "matthiasnoback/symfony-config-test": "^5.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "JDecool\\Bundle\\TwigConstantAccessorBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests/Fixtures",
            "JDecool\\Bundle\\TwigConstantAccessorBundle\\Tests\\Functionals\\": "tests/Functionals",
            "JDecool\\Bundle\\TwigConstantAccessorBundle\\Tests\\Units\\": "tests/Units"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
