{
    "name": "jdecool/twig-constant-accessor-bundle",
    "description": "Simplify access of your class constants in Twig",
    "type": "symfony-bundle",
    "keywords": ["symfony", "twig", "constant"],
    "homepage": "http://github.com/jdecool/TwigConstantAccessorBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Jérémy DECOOL",
            "email": "contact@jdecool.fr"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "symfony/dependency-injection": "^4.3|^5.0",
        "symfony/framework-bundle": "^4.3|^5.0",
        "symfony/twig-bundle": "^4.3|^5.0",
        "twig/twig": "^2.4|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "matthiasnoback/symfony-dependency-injection-test": "^4.0",
        "friendsofphp/php-cs-fixer": "^2.12"
    },
    "autoload": {
        "psr-4": {"JDecool\\Bundle\\TwigConstantAccessorBundle\\": ""},
        "exclude-from-classmap": ["Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "": "Tests/Fixtures",
            "JDecool\\Bundle\\TwigConstantAccessorBundle\\Tests\\Functionals\\": "Tests/Functionals",
            "JDecool\\Bundle\\TwigConstantAccessorBundle\\Tests\\Units\\": "Tests/Units"
        }
    }
}
